# Environment variables
ENV=development
LOG_LEVEL=DEBUG

# Database paths
DATABASE_PATH=./data
MODEL_STORAGE_PATH=./models
LOG_DATABASE_PATH=./logs/api_logs.db

# Model settings
MAX_FORECAST_DAYS=365
DEFAULT_CONFIDENCE_INTERVAL=0.95

# Performance monitoring
ENABLE_MONITORING=true
PERFORMANCE_THRESHOLD_MS=5000

# Logging
LOG_RETENTION_DAYS=90

# Security (in production, use proper secret management)
API_SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# External data paths (for development)
EXTERNAL_TRAIN_DATA_PATH=../cs-train
EXTERNAL_PRODUCTION_DATA_PATH=../cs-production
